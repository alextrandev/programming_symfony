{% extends "base.html.twig" %}

{% block body %}
	<body>
		<div class="header">
			<h2>Symfony CRUD App</h2>
			<form action={{ path("app_create") }} method="post">
				<input name="title" type="text" id="myInput" placeholder="Task title..."/>
				<button type="submit" class="addBtn">Add a task</button>
			</form>
		</div>

		<ul>
			{% for task in tasks %}
				<li {% if task.status == 1 %} class="checked" {% endif %}>
					<a href={{ path('app_update', {'id':task.id} ) }}>
						<span class="task-list-item">{{ task.title }}</span>
					</a>
					<a onclick="return confirm('Are you sure to delete?')" href={{ path('app_delete', {'id':task.id} ) }}>
						<span class="close">X</span>
					</a>
				</li>
			{% endfor %}
		</ul>
	</body>
{% endblock %}
